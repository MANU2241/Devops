pipeline {
    agent any

    tools {
        nodejs "node18"
    }

    environment {
        DOCKERHUB = credentials('dockerhub-creds')
        IMAGE_NAME = "username/react-jenkins"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/MANU2241/Devops.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Docker Push') {
            steps {
                sh "echo $DOCKERHUB_PSW | docker login -u $DOCKERHUB_USR --password-stdin"
                sh 'docker push $IMAGE_NAME'
            }
        }

        stage('Deploy App') {
            steps {
                sh 'docker rm -f reactapp || true'
                sh 'docker run -d -p 80:80 --name reactapp $IMAGE_NAME'
            }
        }
    }
}

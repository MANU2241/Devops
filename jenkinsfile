pipeline {
    agent any

    tools {
        nodejs "node20"   // Make sure node20 is configured in Jenkins tools
    }

    environment {
        DOCKERHUB = credentials('dockerhub-creds')     // your Jenkins credential ID
        IMAGE_NAME = "username/react-jenkins"          // change to your DockerHub repo
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/MANU2241/Devops.git'
            }
        }

        stage('Install Dependencies (Local Test Build)') {
            steps {
                bat "npm install"
            }
        }

        stage('React Local Build (Optional Check)') {
            steps {
                bat "npm run build"
            }
        }

        stage('Docker Build') {
            steps {
                bat "docker build -t %IMAGE_NAME% ."
            }
        }

        stage('Docker Login') {
            steps {
                bat """
                echo %DOCKERHUB_PSW% | docker login -u %DOCKERHUB_USR% --password-stdin
                """
            }
        }

        stage('Docker Push') {
            steps {
                bat "docker push %IMAGE_NAME%"
            }
        }

        stage('Deploy Container') {
            steps {
                bat "docker rm -f reactapp || exit 0"
                bat "docker run -d -p 80:80 --name reactapp %IMAGE_NAME%"
            }
        }
    }
}
